<%- include('partials/header', {
    title: 'Admin Dashboard',
    showNav: true,
    currentPage: 'admin',
    isAdmin: user.role === 'admin'
  }) %>

  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

  <div class="content-wrapper reports-section">

    <div class="header-actions mb-4 flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4 sm:gap-0">
      <!-- Search Box -->
      <div class="flex items-start gap-1 items-center">
        <div class="search-box flex items-center bg-white p-1 rounded-lg">
          <i class="fas fa-search text-gray-500"></i>
          <input type="text" id="searchTerm" placeholder="Rechercher un rapport..." value="<%= searchTerm %>" aria-label="Search reports">
        </div>
        <!-- Reset search button -->
        <button id="clearSearch" 
          class="p-2 text-red-500 rounded-full hover:text-white hover:bg-red-500 focus:ring-2 focus:ring-red-400 flex items-center justify-center text-md" 
          aria-label="Clear search" tabindex="0">
          <i class="fas fa-filter-circle-xmark"></i>
        </button>
      </div>

      <!-- Backup Database Button -->
      <div class="flex items-center w-full sm:w-auto">
        <div class="relative w-full sm:w-auto">
          <button id="backupDatabaseBtn" 
                  class="w-full sm:w-auto flex items-center justify-center gap-2 px-4 py-2.5 bg-green-500 text-white rounded-lg hover:bg-green-600 focus:ring-2 focus:ring-green-400 disabled:opacity-50 disabled:cursor-not-allowed transition-all duration-200"
                  aria-label="Sauvegarder la base de données" 
                  tabindex="0">
            <i class="fas fa-database"></i>
            <span class="whitespace-nowrap">Sauvegarder BDD</span>
            <div id="backupLoadingSpinner" class="hidden">
              <i class="fas fa-circle-notch fa-spin"></i>
            </div>
          </button>
          <div id="backupStatus" class="absolute left-0 sm:left-1/2 sm:-translate-x-1/2 -bottom-7 text-sm font-medium transition-all duration-200 opacity-0 whitespace-nowrap"></div>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 gap-6">

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Users Table -->
        <div class="bg-white border rounded-lg">
          <div class="p-3 border-b flex justify-between items-center">
            <h2 class="text-xl font-semibold">Utilisateurs</h2>
            <button id="new-user-btn"
                    class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 focus:ring-2 focus:ring-blue-400"
                    aria-label="Ajouter un utilisateur" tabindex="0">
              <i class="fas fa-user-plus mr-1"></i> Ajouter un utilisateur
            </button>
          </div>
          <div class="p-3 overflow-x-auto">
            <% if (users && users.length > 0) { %>
              <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                  <tr>
                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Nom complet</th>
                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Username</th>
                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Email</th>
                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Rôle</th>
                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Statut</th>
                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                  <% 
                    const sortedUsers = [...users].sort((a, b) => {
                      if (a.is_active === b.is_active) return 0;
                      return a.is_active ? -1 : 1;
                    });
                    sortedUsers.forEach(user => { 
                  %>
                    <tr class="<%= user.is_active ? '' : 'bg-red-50' %>">
                      <td class="px-4 py-2 whitespace-nowrap text-sm <%= user.is_active ? 'text-gray-900' : 'text-red-700' %>">
                        <%= user.last_name %> <%= user.first_name %>
                      </td>
                      <td class="px-4 py-2 whitespace-nowrap text-sm <%= user.is_active ? 'text-gray-900' : 'text-red-700' %>">
                        <%= user.username %>
                      </td>
                      <td class="px-4 py-2 whitespace-nowrap text-sm <%= user.is_active ? 'text-gray-900' : 'text-red-700' %>">
                        <%= user.email %>
                      </td>
                      <td class="px-4 py-2 whitespace-nowrap text-sm <%= user.is_active ? 'text-gray-900' : 'text-red-700' %>">
                        <%= user.role %>
                      </td>
                      <td class="px-4 py-2 whitespace-nowrap text-sm">
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= user.is_active ? 'bg-green-100 text-green-800' : 'bg-red-200 text-red-800' %>">
                          <%= user.is_active ? 'Active' : 'Inactive' %>
                        </span>
                      </td>
                      <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900 flex gap-2">
                        <button type="button" class="edit-user-btn px-3 py-1 bg-blue-500 text-white rounded-md hover:bg-blue-600 focus:ring-2 focus:ring-blue-400" 
                          data-id="<%= user.user_id %>" aria-label="Modifier" tabindex="0">
                          <i class="fas fa-edit"></i>
                        </button>
                        <% if(user.is_active) { %>
                          <button type="button" class="deactivate-user-btn px-3 py-1 bg-red-500 text-white rounded-md hover:bg-red-600 focus:ring-2 focus:ring-red-400" 
                          data-id="<%= user.user_id %>" <%= user.is_active ? '' : 'disabled' %> aria-label="Désactiver" tabindex="0">
                          <i class="fas fa-user-slash"></i>
                          </button>
                        <% } else { %>
                          <button type="button" class="delete-user-btn px-3 py-1 bg-red-500 text-white rounded-md hover:bg-red-600 focus:ring-2 focus:ring-red-400" 
                          data-id="<%= user.user_id %>" aria-label="Supprimer" tabindex="0">
                          <i class="fas fa-trash-alt"></i>
                          </button>
                        <% } %>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            <% } else { %>
              <p class="text-gray-600">No users found.</p>
            <% } %>
          </div>
        </div>

        <!-- Customers Table -->
        <div class="bg-white border rounded-lg">
          <div class="p-3 border-b flex justify-between items-center">
            <h2 class="text-xl font-semibold">Clients</h2>
            <button name="new-customer-btn"
                    class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 focus:ring-2 focus:ring-blue-400"
                    aria-label="Ajouter un client" tabindex="0">
              <i class="fas fa-user-plus mr-1"></i> Ajouter un client
            </button>
          </div>
          <div class="p-3 overflow-x-auto">
            <% if (customers && customers.length > 0) { %>
              <table class="min-w-full divide-y divide-gray-200 relative">
                <thead class="bg-gray-50">
                  <tr>
                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Nom</th>
                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Téléphone</th>
                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Adresse</th>
                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase sticky right-0 bg-gray-50 z-10">Actions</th>
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                  <% customers.forEach(customer => { %>
                    <tr class="hover:bg-gray-50">
                      <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900"><%= customer.name %></td>
                      <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900"><%= customer.phone %></td>
                      <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900"><%= customer.address %></td>
                      <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900 sticky right-0 bg-white z-10">
                        <div class="flex gap-2">
                          <button type="button" class="edit-customer-btn px-3 py-1 bg-blue-500 text-white rounded-md hover:bg-blue-600 focus:ring-2 focus:ring-blue-400" 
                            data-id="<%= customer.customer_id %>" aria-label="Modifier" tabindex="0">
                            <i class="fas fa-edit"></i>
                          </button>
                          <button type="button" class="delete-customer-btn px-3 py-1 bg-red-500 text-white rounded-md hover:bg-red-600 focus:ring-2 focus:ring-red-400" 
                            data-id="<%= customer.customer_id %>" aria-label="Supprimer" tabindex="0">
                            <i class="fas fa-trash-alt"></i>
                          </button>
                          <button type="button" 
                                  class="view-customer-cars-btn px-3 py-1 bg-green-500 text-white rounded-md hover:bg-green-600 focus:ring-2 focus:ring-green-400" 
                                  data-id="<%= customer.customer_id %>" 
                                  aria-label="Voir les véhicules et rapports" 
                                  tabindex="0">
                            <i class="fas fa-car"></i>
                          </button>
                        </div>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            <% } else { %>
              <p class="text-gray-600">Aucun client trouvé.</p>
            <% } %>
          </div>
        </div>
      </div>

      <!-- Inspection Reports Table -->
      <div class="bg-white border rounded-lg">
        <div class="p-3 border-b flex justify-between items-center">
          <h2 class="text-xl font-semibold">Inspection Reports</h2>
        </div>
        <div class="p-3 overflow-x-auto">
          <% if (inspectionReports && inspectionReports.length > 0) { %>
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">ID Rapport</th>
                  <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Véhicule</th>
                  <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Kilométrage</th>
                  <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Prochaine C.T.</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% inspectionReports.forEach(report => {
                  let vehicule = {};
                  vehicules.find(v => {
                    if (v.vehicule_id === report.vehicule_id) {
                      vehicule = v;
                    }
                  });
                  // console.log(`Found license plate: ${licensePlate} for vehicule_id: ${report.vehicule_id} and report_id: ${report.report_id}`);
                  // console.log(`Found vehicule id : ${vehicule.license_plate} for vehicule_id: ${report.vehicule_id}`);
                  %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900">
                      <a href="/report/<%= report.report_id %>" target="_blank" class="text-blue-600 hover:text-blue-800 hover:underline flex items-center">
                        <i class="fas fa-external-link-alt mr-1 text-xs"></i>
                        <%= report.report_id %>
                      </a>
                    </td>
                    
                    <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900">
                      <div class="flex items-center">
                        <div class="w-16">
                          <span class="font-medium"><%= vehicule.license_plate %></span>
                        </div>
                        <div class="pl-4">
                          <span class="text-xs text-gray-400 bg-gray-100 px-1.5 py-0.5 rounded"><%= vehicule.vehicule_id %></span>
                        </div>
                      </div>
                    </td>
                    <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900"><%= report.mileage ? `${report.mileage} km` : '-' %></td>
                    <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900"><%= report.next_technical_inspection && report.next_technical_inspection !== '1970-01-01' ? new Date(report.next_technical_inspection).toLocaleDateString('fr-FR') : '-' %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          <% } else { %>
            <p class="text-gray-600">Aucun rapport trouvé.</p>
          <% } %>
        </div>
      </div>

      <!-- Vehicules Table -->
      <div class="bg-white border rounded-lg">
        <div class="p-3 border-b flex justify-between items-center">
          <h2 class="text-xl font-semibold">Véhicules</h2>
          <button id="new-vehicule-btn"
                  class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 focus:ring-2 focus:ring-blue-400"
                  aria-label="Ajouter un véhicule" tabindex="0">
            <i class="fas fa-car mr-1"></i> Ajouter un véhicule
          </button>
        </div>
        <div class="p-3 overflow-x-auto">
          <% if (vehicules && vehicules.length > 0) { %>
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <% Object.keys(vehicules[0]).forEach(key => { %>
                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase"><%= key %></th>
                  <% }) %>
                  <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% vehicules.forEach(vehicule => { %>
                  <% let customer = {};
                    customers.find(c => {
                      if (c.customer_id === vehicule.customer_id) {
                        customer = c;
                      }
                    });
                  %>
                  <tr class="hover:bg-gray-50">
                    <% Object.keys(vehicule).forEach(key => { %>
                      <% if(key === 'customer_id') { %>
                        <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900">
                          <div class="flex items-center">
                            <div class="flex-grow">
                              <span class="font-medium"><%= customer.name %></span>
                            </div>
                            <div class="pl-4">
                              <span class="text-xs text-gray-400 bg-gray-100 px-1.5 py-0.5 rounded"><%= customer.customer_id %></span>
                            </div>
                          </div>
                        </td>
                      <% } else if (key === 'first_registration_date') { %>
                        <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900"><%= vehicule[key] ? new Date(vehicule[key]).toLocaleDateString('fr-FR') : '-' %></td>
                      <% } else { %>
                        <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900"><%= vehicule[key] ? vehicule[key] : '-' %></td>
                      <% } %>
                    <% }) %>
                    <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900 flex gap-2">
                      <button type="button" class="edit-vehicule-btn px-3 py-1 bg-blue-500 text-white rounded-md hover:bg-blue-600 focus:ring-2 focus:ring-blue-400" 
                        data-id="<%= vehicule.vehicule_id %>" aria-label="Modifier" tabindex="0">
                        <i class="fas fa-edit"></i>
                      </button>
                      <button type="button" class="delete-vehicule-btn px-3 py-1 bg-red-500 text-white rounded-md hover:bg-red-600 focus:ring-2 focus:ring-red-400" 
                        data-id="<%= vehicule.vehicule_id %>" aria-label="Supprimer" tabindex="0">
                        <i class="fas fa-trash-alt"></i>
                      </button>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          <% } else { %>
            <p class="text-gray-600">Aucun véhicule trouvé.</p>
          <% } %>
        </div>
      </div>

