  </div>

  <!-- All Modals -->
  <div id="modalContainer" class="fixed inset-0 bg-black bg-opacity-50 hidden flex items-start justify-center z-[100] pt-20 overflow-y-auto modal-container">
    <!-- User Modal -->
    <div id="userModal" class="bg-white rounded-lg shadow-xl w-full max-w-md hidden">
      <div class="p-6">
        <h3 class="text-xl font-semibold mb-4">Nouvel utilisateur</h3>
        <form id="userForm" class="space-y-4">
          <input type="hidden" id="userId" name="user_id">
          <div>
            <label for="last_name" class="block text-sm font-medium text-gray-700">Nom</label>
            <input type="text" id="last_name" name="last_name" required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm">
          </div>
          <div>
            <label for="first_name" class="block text-sm font-medium text-gray-700">Prénom</label>
            <input type="text" id="first_name" name="first_name" required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm">
          </div>
          <div>
            <label for="username" class="block text-sm font-medium text-gray-700">
              Nom d'utilisateur <i>(utiliser pour la connexion)</i>
            </label>
            <div class="relative">
              <input type="text"
                     id="username"
                     name="username"
                     required
                     class="mt-1 block w-full rounded-md border-gray-300 shadow-sm transition-colors duration-200"
                     aria-label="Username input field">
              <a id="toggleUsernameEdit"
                    class="absolute right-2 top-1/2 transform -translate-y-1/2 p-1.5 text-gray-400 hover:text-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-400 rounded-full"
                    aria-label="Toggle username editability">
              <i class="fas fa-lock"></i>
            </a>
            </div>
            <p class="mt-1 text-sm text-gray-500">Le nom d'utilisateur est généré automatiquement par défaut</p>
          </div>
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
            <input type="email" id="email" name="email" required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm">
          </div>
          <div>
            <label for="password" class="block text-sm font-medium text-gray-700">Mot de passe</label>
            <div class="relative">
              <input type="password" id="password" name="password" required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm">
              <a type="button" name="passwordToggle" class="absolute right-2 top-1/2 transform -translate-y-1/2">
                <i class="fas fa-eye"></i>
              </a>
            </div>
          </div>
          <div>
            <label for="confirmPassword" class="block text-sm font-medium text-gray-700">Confirmer le mot de passe</label>
            <div class="relative">
              <input type="password" id="confirmPassword" name="confirmPassword" required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm">
              <a type="button" name="passwordToggle" class="absolute right-2 top-1/2 transform -translate-y-1/2">
                <i class="fas fa-eye"></i>
              </a>
            </div>
          </div>
          <div>
            <label for="role" class="block text-sm font-medium text-gray-700">Rôle</label>
            <select id="role" name="role" required class="select-input block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-2 focus:ring-blue-500 bg-white text-gray-900 cursor-pointer hover:bg-gray-50 transition duration-150 ease-in-out">
              <option value="user">Utilisateur</option>
              <option value="admin">Administrateur</option>
              <option value="mechanic">Mécanicien</option>
              <option value="secretary">Secrétaire</option>
            </select>
          </div>
          <div class="flex items-center">
            <input type="checkbox" id="is_active" name="is_active" class="rounded border-gray-300 text-blue-600">
            <label for="is_active" class="ml-2 block text-sm text-gray-700">Active</label>
          </div>
          <div class="flex justify-end space-x-3">
            <button type="button" data-dismiss="modal" class="px-4 py-2 border rounded-md hover:bg-gray-100">Cancel</button>
            <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600">Save</button>
          </div>
        </form>
      </div>
    </div>

    <!-- Customer Modal -->
    <div id="customerModal" class="bg-white rounded-lg shadow-xl w-full max-w-md hidden">
      <div class="p-6">
        <h3 class="text-xl font-semibold mb-4">New Customer</h3>
        <form id="customerForm" class="space-y-4">
          <input type="hidden" id="customerId" name="customer_id">
          <div>
            <label for="customerName" class="block text-sm font-medium text-gray-700">
              <i class="far fa-user"></i> Nom
            </label>
            <input type="text" id="customerName" name="name" required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm">
          </div>
          <div>
            <label for="customerPhone" class="block text-sm font-medium text-gray-700">
              <i class="fas fa-phone"></i> Téléphone
            </label>
            <input type="tel" id="customerPhone" name="phone" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm">
          </div>
          <div>
            <label for="customerEmail" class="block text-sm font-medium text-gray-700">
              <i class="fas fa-envelope"></i> Email
            </label>
            <input type="email" id="customerEmail" name="email" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm">
          </div>
          <div>
            <label for="customerAddress" class="block text-sm font-medium text-gray-700">
              <i class="fas fa-map-marker-alt"></i> Adresse
            </label>
            <input type="text" id="customerAddress" name="address" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm">
          </div>
          <div class="flex items-center">
            <input type="checkbox" id="isCompany" name="is_company" class="rounded border-gray-300 text-blue-600">
            <label for="isCompany" class="ml-2 block cursor-pointer text-sm text-gray-700">
              <i class="fas fa-building"></i> Société
            </label>
          </div>
          <div class="flex justify-end space-x-3">
            <button type="button" data-dismiss="modal" class="px-4 py-2 border rounded-md hover:bg-gray-100">Cancel</button>
            <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600">Save</button>
          </div>
        </form>
      </div>
    </div>

    <!-- Vehicule Modal -->
    <div id="vehiculeModal" class="bg-white rounded-lg shadow-xl w-3/4 hidden">
      <div class="p-4">
        <div class="flex justify-between items-center mb-4">
          <h3 class="text-lg font-semibold">
            <i class="fas fa-car mr-2"></i>New Vehicule
          </h3>
          <!-- <button data-dismiss="modal"  
                  class="ml-2 p-1.5 bg-gray-500 text-white rounded-full hover:bg-gray-600 focus:ring-2 focus:ring-gray-400 h-6 w-6 flex items-center justify-center text-sm" 
                  aria-label="Clear search" 
                  tabindex="0">
            <i class="fas fa-times"></i>
          </button> -->
        </div>

        <form id="vehiculeForm" class="space-y-4">
          <input type="hidden" id="vehiculeId" name="vehicule_id">
          
          <!-- Customer Search -->
          <div class="bg-blue-50 p-3 rounded">
            <div class="relative">
              <div class="relative flex items-center gap-2">
                <div class="relative flex-grow">
                  <input type="text" 
                         id="customer_search"
                         name="customer_search"
                         class="w-full py-2 pl-3 pr-10 rounded border-gray-300 shadow-sm text-sm focus:ring-2 focus:ring-blue-400 focus:border-blue-400 transition duration-150 ease-in-out"
                         placeholder="Rechercher un client (nom, téléphone, email, adresse) ..."
                         autocomplete="off"
                         aria-label="Rechercher un client"
                         role="combobox"
                         aria-expanded="false"
                         aria-controls="customer_search_results"
                         aria-haspopup="listbox">
                    <div class="absolute inset-y-0 right-0 pr-3 flex items-center">
                      <i class="fas fa-search text-gray-400"></i>
                      <button type="button" 
                              id="clear_customer_search"
                              class="ml-1 hidden text-gray-400 hover:text-gray-600"
                              aria-label="Effacer la recherche">
                        <i class="fas fa-times"></i>
                      </button>
                    </div>
                  </input>
                </div>
                <button type="button"
                        name="new-customer-btn"
                        class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 focus:ring-2 focus:ring-blue-400 whitespace-nowrap flex-shrink-0"
                        aria-label="Ajouter un client">
                  <i class="fas fa-user-plus mr-1"></i> Nouveau client
                </button>
              </div>
              
              <input type="hidden" id="vehicule_customer_id" name="customer_id">
              
              <div id="customer_search_results" 
                   class="absolute z-10 w-full bg-white shadow-lg rounded-md mt-1 hidden max-h-60 overflow-y-auto border border-gray-200"
                   role="listbox">
              </div>
              
              <div id="selected_customer_info" 
                   class="mt-2 p-3 text-sm bg-white rounded-md border border-blue-200 hidden">
                <div class="flex items-center justify-between">
                  <div class="font-medium text-blue-800" id="selected_customer_name"></div>
                  <button type="button"
                          name="clear_selected_customer"
                          class="text-gray-400 hover:text-gray-600"
                          aria-label="Retirer le client sélectionné">
                    <i class="fas fa-times"></i>
                  </button>
                </div>
                <div class="mt-1 text-gray-600 space-y-1">
                  <div id="selected_customer_phone"></div>
                  <div id="selected_customer_email"></div>
                  <div id="selected_customer_address"></div>
                </div>
              </div>
            </div>
          </div>

          <!-- Main Info Grid -->
          <div class="grid grid-cols-5 gap-3">
            <div>
              <label for="license_plate" class="block text-xs font-medium text-gray-700">
                <i class="fas fa-id-card mr-1"></i>Immatriculation*
              </label>
              <input type="text" id="license_plate" name="license_plate" required 
                     class="mt-1 w-full rounded border-gray-300 shadow-sm text-sm uppercase"
                     placeholder="AB-123-CD">
            </div>
            <div>
              <label for="brand" class="block text-xs font-medium text-gray-700">
                <i class="fas fa-car mr-1"></i>Marque*
              </label>
              <input type="text" id="brand" name="brand" required 
                     class="mt-1 w-full rounded border-gray-300 shadow-sm text-sm"
                     placeholder="ex: Renault">
            </div>
            <div>
              <label for="model" class="block text-xs font-medium text-gray-700">
                <i class="fas fa-car-side mr-1"></i>Modèle*
              </label>
              <input type="text" id="model" name="model" required 
                     class="mt-1 w-full rounded border-gray-300 shadow-sm text-sm"
                     placeholder="ex: Clio">
            </div>
            <div>
              <label for="first_registration_date" class="block text-xs font-medium text-gray-700">
                <i class="fas fa-calendar-alt mr-1"></i>Mise en circulation
              </label>
              <input type="date" id="first_registration_date" name="first_registration_date" 
                     class="mt-1 w-full rounded border-gray-300 shadow-sm text-sm">
            </div>
            <div>
              <label for="engine_code" class="block text-xs font-medium text-gray-700">
                <i class="fas fa-microchip mr-1"></i>Code moteur
              </label>
              <input type="text" id="engine_code" name="engine_code" 
                     class="mt-1 w-full rounded border-gray-300 shadow-sm text-sm"
                     placeholder="ex: K9K">
            </div>
          </div>

          <!-- Technical Info Grid -->
          <div class="grid grid-cols-5 gap-3">
            <div>
              <label for="revision_oil_type" class="block text-xs font-medium text-gray-700">
                <i class="fas fa-oil-can mr-1"></i>Type huile
              </label>
              <input type="text" id="revision_oil_type" name="revision_oil_type" 
                     class="mt-1 w-full rounded border-gray-300 shadow-sm text-sm"
                     placeholder="ex: 5W30">
            </div>
            <div>
              <label for="revision_oil_volume" class="block text-xs font-medium text-gray-700">
                <i class="fas fa-fill-drip mr-1"></i>Volume (L)
              </label>
              <input type="number" id="revision_oil_volume" name="revision_oil_volume" 
                     class="mt-1 w-full rounded border-gray-300 shadow-sm text-sm"
                     step="0.01" placeholder="5.5">
            </div>
            <div>
              <label for="drain_plug_torque" class="block text-xs font-medium text-gray-700">
                <i class="fas fa-wrench mr-1"></i>Couple de serrage (Nm)
              </label>
              <input type="number" id="drain_plug_torque" name="drain_plug_torque" 
                     class="mt-1 w-full rounded border-gray-300 shadow-sm text-sm"
                     step="0.1" placeholder="25">
            </div>
            <div>
              <label for="brake_disc_thickness_front" class="block text-xs font-medium text-gray-700">
                <i class="fa-solid fa-cookie-bite mr-1"></i>Disques AV
              </label>
              <input type="text" id="brake_disc_thickness_front" name="brake_disc_thickness_front" 
                     class="mt-1 w-full rounded border-gray-300 shadow-sm text-sm"
                     placeholder="230/245/260">
            </div>
            <div>
              <label for="brake_disc_thickness_rear" class="block text-xs font-medium text-gray-700">
                <i class="fa-solid fa-cookie mr-1"></i>Disques AR
              </label>
              <input type="text" id="brake_disc_thickness_rear" name="brake_disc_thickness_rear" 
                     class="mt-1 w-full rounded border-gray-300 shadow-sm text-sm"
                     placeholder="10/24/36">
            </div>
          </div>

          <!-- Form Actions -->
          <div class="flex justify-end space-x-2 pt-4 border-t">
            <button type="button" data-dismiss="modal" 
                    class="px-3 py-1.5 border rounded text-sm hover:bg-gray-100 focus:ring-2 focus:ring-gray-400">
              <i class="fas fa-times mr-1"></i>Annuler
            </button>
            <button type="submit" 
                    class="px-3 py-1.5 bg-blue-500 text-white rounded text-sm hover:bg-blue-600 focus:ring-2 focus:ring-blue-400">
              <i class="fas fa-save mr-1"></i>Enregistrer
            </button>
          </div>
        </form>
      </div>
    </div>

    <!-- Inspection Item Modal -->
    <div id="inspectionItemModal" class="bg-white rounded-lg shadow-xl w-full max-w-md hidden">
      <div class="p-6">
        <h3 class="text-xl font-semibold mb-4">New Inspection Item</h3>
        <form id="inspectionItemForm" class="space-y-4">
          <input type="hidden" id="itemId" name="item_id">
          <div>
            <label for="itemName" class="block text-sm font-medium text-gray-700">Name</label>
            <input type="text" id="itemName" name="name" required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm">
          </div>
          <div>
            <label for="itemType" class="block text-sm font-medium text-gray-700">Type</label>
            <select id="itemType" name="type" required class="select-input block w-full rounded-md border-gray-300 shadow-sm">
              <option value="checkbox">Checkbox</option>
              <option value="text">Text</option>
              <option value="number">Number</option>
            </select>
          </div>
          <div>
            <label for="itemCategory" class="block text-sm font-medium text-gray-700">Category</label>
            <select id="itemCategory" name="category" required class="select-input block w-full rounded-md border-gray-300 shadow-sm">
              <option value="new">New Category</option>
              <% if (locals.categories) { %>
                <% categories.forEach(category => { %>
                  <option value="<%= category.name %>" count="<%= category.count %>"><%= category.name %></option>
                <% }) %>
              <% } %>
            </select>
          </div>
          <div id="newCategoryContainer" class="hidden">
            <label for="newCategory" class="block text-sm font-medium text-gray-700">New Category Name</label>
            <input type="text" id="newCategory" name="newCategory" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm">
          </div>
          <div>
            <label for="itemDisplayOrder" class="block text-sm font-medium text-gray-700">Display Order</label>
            <input type="number" id="itemDisplayOrder" name="display_order" required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm">
          </div>
          <div class="flex items-center">
            <input type="checkbox" id="itemActive" name="is_active" class="rounded border-gray-300 text-blue-600">
            <label for="itemActive" class="ml-2 block text-sm text-gray-700">Active</label>
          </div>
          <div class="flex justify-end space-x-3">
            <button type="button" data-dismiss="modal" class="px-4 py-2 border rounded-md hover:bg-gray-100">Cancel</button>
            <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600">Save</button>
          </div>
        </form>
      </div>
    </div>

    <!-- Cars and Reports Modal -->
    <div id="carsReportsModal" class="bg-white rounded-lg shadow-xl w-full md:w-3/4 max-w-7xl mx-auto hidden max-h-[90vh] md:max-h-[85vh] flex flex-col">
      <div class="p-4 md:p-6 flex-none">
        <div class="flex justify-between items-center pb-3 border-b">
          <h3 class="text-lg md:text-xl font-semibold text-gray-900 pr-4">
            <i class="fas fa-car mr-2 text-green-500"></i>
            <span id="modalCustomerName" class="break-words"></span>
          </h3>
          <button type="button"
                  class="text-red-500 hover:text-red-600 transition-colors duration-200 p-2 rounded-full w-8 h-8 flex items-center justify-center bg-red-100 hover:bg-red-200 focus:outline-none focus:ring-2 focus:ring-red-300 flex-shrink-0"
                  data-dismiss="modal"
                  aria-label="Fermer le modal">
            <i class="fas fa-times"></i>
          </button>
        </div>
        
        <div class="mt-4 overflow-y-auto flex-grow" id="carsReportsList" style="max-height: calc(90vh - 8rem);">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 md:gap-6">
            <!-- Content will be dynamically populated -->
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Toast notifications -->
  <div id="toast-container" class="fixed top-2 right-2 flex flex-col items-end space-y-2 popup-container" aria-live="assertive" aria-atomic="true">
  </div>

