{
    "env": {
        "node": true,
        "es2021": true,
        "jest": true,
        "browser": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 2],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-unused-vars": ["warn"],
        "no-undef": ["off"],
        "no-console": ["off"]
    },
    "ignorePatterns": ["public/js/vendor/**"],
    "globals": {
        "document": "readonly",
        "window": "readonly",
        "location": "readonly",
        "confirm": "readonly",
        "DOMParser": "readonly",
        "requestAnimationFrame": "readonly",
        "bootstrap": "readonly",
        "isModalOpen": "writable",
        "searchTimeout": "writable",
        "toggleButton": "writable"
    }
} 